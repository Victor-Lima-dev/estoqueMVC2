@model IEnumerable<estoqueMVC2.Models.Produto>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.ProdutoId</td>
                <td>@produto.Nome</td>
                <td>@produto.Descricao</td>
                <td>@produto.Preco</td>
                <td>@produto.Categoria</td>
                <td><a asp-action="Detalhes" asp-route-id="@produto.ProdutoId">Detalhes</a></td>
            </tr>
        }
    </tbody>
</table>
<div class="container-fluid">
    <div class="row justify-content-center mb-3">
<form asp-controller="Produtos" asp-action="PesquisarPorPreco" method="get">
    <div class="form-group">
        <label for="valor">Pesquisar por preço:</label>
        <div class="form-check">
            <input type="radio" class="form-check-input" name="valor" value="maior">
            <label class="form-check-label" for="maior">Maior para menor</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" name="valor" value="menor">
            <label class="form-check-label" for="menor">Menor para maior</label>
        </div>
        <button type="submit" class="btn btn-primary">Pesquisar</button>
    </div>
</form>
<form asp-controller="Produtos" asp-action="PesquisarPorCategoria" method="get">
    <div class="form-group">
        <label for="categoria">Pesquisar por categoria:</label>
        <div class="input-group mb-3">
            <select name="categoria" class="form-control">
                <option value="">Selecione uma categoria</option>
                <option value="Alimento">Alimentos</option>
                <option value="Bebida">Bebidas</option>
                <option value="Higiene">Higiene</option>
                <option value="Limpeza">Limpeza</option>                
            </select>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Pesquisar</button>
            </div>
        </div>
    </div>
</form>

<form asp-action="Pesquisar" method="get">
    <div class="form-group">
        <label for="nome">Pesquisar por nome:</label>
        <div class="input-group mb-3">
            <input type="text" name="nome" class="form-control" value="@ViewData["nome"]" placeholder="Digite o nome do produto">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Pesquisar</button>
            </div>
        </div>
    </div>
</form>
        <a asp-action="Cadastrar" class="btn btn-success">Cadastrar Produto</a>
    </div>
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Preço</th>
                            <th>Categoria</th>
                            <th>Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var produto in Model)
                        {
                            <tr>
                                <td>@produto.ProdutoId</td>
                                <td>@produto.Nome</td>
                                <td>@produto.Descricao</td>
                                <td>R$ @produto.Preco.ToString("F2")</td>
                                <td>@produto.Categoria</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Detalhes" asp-route-id="@produto.ProdutoId" class="btn btn-primary">Detalhes</a>
                                        <a asp-action="Editar" asp-route-id="@produto.ProdutoId" class="btn btn-warning">Editar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

